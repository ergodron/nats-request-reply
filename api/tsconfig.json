{
  "compilerOptions": {
    "target": "esnext",                                 
    "module": "commonjs",                                       
    "outDir": "./build",           
    "rootDir": "./src",                        
    "esModuleInterop": true,                            
    "forceConsistentCasingInFileNames": true,           
    "strict": true,                                      
    "skipLibCheck": true,                               
  },
  "include": ["."],
  "exclude": ["./node_modules", "./build"],
}
